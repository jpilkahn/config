#!/usr/bin/env sh

# Purge artifacts generated by `autotools`

main() {
    cd "${1:-"${DESTDIR:-"${PWD}"}"}" || return
    __run
}

__run() {
    command rm -rf \
        "autom4te.cache" \
        "install-sh" \
        "missing"

    command rm -f \
        "aclocal.m4" \
        "config.log" \
        "config.status" \
        "configure"

    find . \
        \( -name Makefile \
        -o -name Makefile.in \) \
        -exec rm -f {} \; 2>/dev/null || :
}

main "${@}"
