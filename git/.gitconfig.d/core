[advice]
    addIgnoredFile = false

[apply]
    whitespace = nowarn

[branch]
    # implies --track, `true` for remote branches, `always` for remote and local
    autosetupmerge = true
    # rebase (rather than default merge) on pull
    autosetuprebase = always

[commit]
	gpgsign = true

[core]
    autocrlf = input
    editor = joe
    excludesfile = ~/.gitconfig.d/excludesfile
    pager = diff-so-fancy | less --tabs=4 -RFX

[diff]
    mnemonicprefix = true

[init]
    defaultBranch = main

[push]
    default = upstream

[pull]
    default = current

[rebase]
    autosquash = true
